{
  "name": "nuxt-starter",
  "description": "A nuxt project startup template",
  "author": "liting-yes <luz.liting@gmail.com> (https://liting.ink/)",
  "license": "MIT",
  "homepage": "https://github.com/liting-yes/nuxt-starter#readme",
  "bugs": {
    "url": "https://github.com/liting-yes/nuxt-starter/issues"
  },
  "keywords": [
    "nuxt",
    "template",
    "starter"
  ],
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . && stylelint \"**/*.{css,scss}\"",
    "format": "eslint --fix . && stylelint --fix \"**/*.{css,scss}\"",
    "commit": "git add . && git-cz",
    "prepare": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.43.1",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@commitlint/cz-commitlint": "^17.8.1",
    "@iconify/json": "^2.2.189",
    "@nuxt/devtools": "^0.8.5",
    "@nuxthq/ui": "^2.7.0",
    "@nuxtjs/eslint-module": "^4.1.0",
    "@nuxtjs/fontaine": "^0.4.1",
    "@nuxtjs/stylelint-module": "^5.2.0",
    "@types/node": "^18",
    "@vueuse/core": "^10.9.0",
    "@vueuse/nuxt": "^10.9.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-tailwindcss": "^3.14.3",
    "inquirer": "8",
    "lint-staged": "^13.3.0",
    "nuxt": "^3.10.3",
    "nuxt-lodash": "^2.5.3",
    "sass": "^1.71.1",
    "simple-git-hooks": "^2.10.0",
    "stylelint": "^15.11.0",
    "stylelint-config-recommended-scss": "^12.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "typescript": "^5.4.4"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,vue,json,md}": "eslint --fix"
  }
}
